@model IndustryTower.Models.Profession

<div class="row dir">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resource.addCategory
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.professionName)
                            @Html.TextBoxFor(model => model.professionName, new { @class="form-control" })
                            @Html.ValidationMessageFor(model => model.professionName)
                        </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.professionNameEN)
        @Html.TextBoxFor(model => model.professionNameEN, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.professionNameEN)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.professionDescription)
        @Html.TextAreaFor(model => model.professionDescription, new { @placeholder = Html.DisplayNameFor(model => model.professionName), @onkeyup = "textAreaAdjust(this)", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.professionDescription)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.professionDescriptionEN)
        @Html.TextAreaFor(model => model.professionDescriptionEN, new { @placeholder = Html.DisplayNameFor(model => model.professionNameEN), @onkeyup = "textAreaAdjust(this)", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.professionDescriptionEN)
    </div>

                        <div>
                            @Html.Action("MainCatsCreate", "Profession", new { proffID = EncryptionHelper.Protect(Model.profID) })
                        </div>




                            <input type="submit" value=@Resource.save class="btn btn-primary btn-lg col-md-12"/>


                }

            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/Category")

<script>
    $(document).ready(function () {
        CatsColor()
    })
</script>