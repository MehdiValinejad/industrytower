
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">
        @Resource.title 
        @RenderSection("modalheader", required: false)
        
    
    </h4>
</div>

<div class="modal-body dir">

        @RenderSection("modalbody", required: false)

</div>
<div class="modal-footer dir">
    <button type="button" class="btn btn-default" data-dismiss="modal">@Resource.close</button>
    @RenderSection("modalfooter", required: false)

    @*<button type="button" class="btn btn-primary">Save changes</button>*@
</div>
