@model IndustryTower.Models.GroupSession

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">
        @Resource.sessionOffer
    </h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body dir">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("S", EncryptionHelper.Protect(Model.sessionId))
        <h3>
            @Resource.areYouSure
        </h3>
    </div>
    <div class="modal-footer dir">
        <button type="button" class="btn btn-default" data-dismiss="modal" >@Resource.close</button>
        <input type="submit" value="@Resource.delete" class="btn btn-primary" data-loading-text="@Resource.loading" />
    </div>
}