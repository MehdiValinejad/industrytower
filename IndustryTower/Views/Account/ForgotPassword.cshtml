@{
    ViewBag.Title = Resource.forgotPass;
}


<div class="row dir">
    <div class="col-md-offset-4 col-md-4 margin-top-bot-lg">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>@Resource.forgotPass</strong>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="margin-top-bot-md">
                        @Resource.forgotHelp
                    </div>
                    <div class="form-group">
                        @Html.TextBox("UserName", null, new { @placeholder = ModelDisplayName.userName, @class = "form-control dirltr" })
                    </div>
                    <input type="submit" class=" btn btn-primary col-md-12 col-xs-12" value="@Resource.recover" />


                    <span class="">
                        @ViewData["message"]
                    </span>


                }

            </div>
        </div>
    </div>
</div>



