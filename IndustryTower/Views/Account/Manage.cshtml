@model IndustryTower.Models.LocalPasswordModel
@{
    ViewBag.Title = Resource.manageAccount;
}

<div class="row dir margin-top-bot-md bg-default">
    <div class="col-md-12 margin-top-bot-md">
        <h3 class="pull-right">@ViewBag.Title</h3>
        <div class="pull-left">
            <div class="alert alert-info">
                @Resource.youAreLogedInAs <strong>@User.Identity.Name</strong>.
            </div>
        </div>
    </div>

</div>


<p class="message-success">@ViewBag.StatusMessage</p>



<div class="row dir">
    <div class="col-md-4 col-md-offset-4">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }
    </div>
   
</div>


