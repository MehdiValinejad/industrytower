@model IndustryTower.Models.Answer



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">
        @Resource.answer - @Resource.edit
    </h4>
</div>
@using (Html.BeginForm(null, null, new { ATD = EncryptionHelper.Protect(Model.answererID) }, FormMethod.Post, new { @class = "deletequestion-form" }))
{
    <div class="modal-body dir">
       @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Hidden("A", Model.answerID != null ? EncryptionHelper.Protect(Model.answerID) : null)
    @Html.Hidden("U", Model.answererID != null ? EncryptionHelper.Protect(Model.answererID) : null)
        <h3>
            @Resource.areYouSure
        </h3>
    </div>
    <div class="modal-footer dir">
        <button type="button" class="btn btn-default" data-dismiss="modal" data-loading-text="@Resource.loading">@Resource.close</button>
        <input type="submit" value="@Resource.delete" class="btn btn-primary" />
    </div>
}