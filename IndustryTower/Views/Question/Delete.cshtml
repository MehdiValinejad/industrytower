@model IndustryTower.Models.Question


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">
        @Resource.question
    </h4>
</div>
@using (Html.BeginForm(null, null, new { QTD = EncryptionHelper.Protect(Model.questionID) }, FormMethod.Post, new { @class = "deletequestion-form" }))
{
    <div class="modal-body dir">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.Hidden("Q", EncryptionHelper.Protect(Model.questionID))
            <h3>
                @Resource.areYouSure
            </h3>
    </div>
    <div class="modal-footer dir">
        <button type="button" class="btn btn-default" data-dismiss="modal" >@Resource.close</button>
        <input type="submit" value="@Resource.delete" class="btn btn-primary" data-loading-text="@Resource.loading" />
    </div>
}



