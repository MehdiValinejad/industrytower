@model IList<IndustryTower.Models.Word>

@if (Model.Count() > 0 )
{ 
    <div class="dir bottom-border-gray">@Resource.wordSearchHelp</div>
    foreach (var item in Model)
    {
        <div class="search-mini-item btn btn-info btn-xs cursor-point margin-top-bot-md" data-id="@item.wordId">
            @Html.DisplayFor(model => item.word)
        </div>
    }
    <div>
        <span class="new-word-insert btn btn-info btn-xs col-md-8 col-md-offset-2 margin-top-bot-md">@Resource.wordNewIfnotDesire</span>
    </div>
}
else
{
    <span class="new-word-insert btn btn-info btn-xs col-md-8 col-md-offset-2 margin-top-bot-md">@Resource.wordNew</span>
}
